<h1>Editing User</h1>

<%#= render 'form', user: @user %>

<%= form_tag("../../users/"+ @user.id.to_s, method: "put") do %>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name, @user.name) %>
  <br>
   <%= label_tag(:email, "Email:") %>
  <%= text_field_tag(:email, @user.email) %>
  <br>
   <%= label_tag(:phone, "phone:") %>
  <%= text_field_tag(:phone, @user.phone) %>
  <br>
   <%= label_tag(:photo, "photo:") %>
  <%= file_field_tag(:photo) %>
  <br>
  <%=@user.photo.to_s.split("/")[-1]%>
  <br>
  <%= submit_tag("Update") %>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
